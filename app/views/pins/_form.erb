<% if !@errors.nil? %>
  <div class="error">
    <label><%= pluralize(@errors.count, "error") %> prohibited this pin from being saved:</label>
	  <ul>
	    <% @errors.full_messages.each do |msg| %>
		  <li><%= msg %></li>
		<% end %>
      </ul>
	</div>
<% end %>

<%= form_for @pin, html: { class: 'form form-horizontal' } do |f| %>
  <form class="form-horizontal">
    <div class="form-group">
      <label for="pin_title" class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
          <%=f.text_field :title %>
        </div>
    </div>
    
	<div class="form-group">
      <label for="pin_category_id" class="col-sm-2 control-label">Category</label>
	    <div class="col-sm-10">
          <%= f.collection_select(:category_id, Category.all, :id, :name) %>
        </div>
	</div>

    <div class="form-group">
	  <label for="url" class="col-sm-2 control-label">URL</label>
        <div class="col-sm-10">  
		  <%= f.url_field :url %>
		</div>
	  </div>
  
    <div class="form-group">
      <label for="slug" class="col-sm-2 control-label">Path Shown</label>
	    <div class="col-sm-10">
          <%=f.text_field :slug %>
		</div>
	  </div>
	  
	<div class="form-group">
      <label for="text" input type="text" class="col-sm-2 control-label">Description</label>
	    <div class="col-sm-10">
          <%= f.text_area :text, rows: 9, class: "form-control" %>
		</div>
    </div>
	
	<div class="form-group">
	  <label for="pin_image">Image</label>
	  <%= f.file_field :image %>
	</div>
	</div>
	
	<div class="form-group text-right col-sm-12">
	  <%= f.submit class: 'btn' %>
	  </div>
	</div>
	
<% end %>